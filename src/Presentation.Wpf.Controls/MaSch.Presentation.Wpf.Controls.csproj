<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>

    <!-- General Project info -->
    <RootNamespace>MaSch.Presentation.Wpf</RootNamespace>
    <TargetFrameworks>net5.0-windows;net48</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ConfigureSourceLink>true</ConfigureSourceLink>
    <AddReleaseNotes>true</AddReleaseNotes>

    <!-- Output info -->
    <SignAssembly>true</SignAssembly>

    <!-- Package Info -->
    <Description>Contains advanced controls for .NET WPF applications.</Description>
    <Version>0.1.6</Version>
    <PackageTags>masch presentation ui frontend wpf controls</PackageTags>
  </PropertyGroup>

  <Import Project="../../build/MaSch.props" />

  <ItemGroup>
    <ProjectReference Include="..\Core\MaSch.Core.csproj" />
    <ProjectReference Include="..\Presentation.Wpf.Themes\MaSch.Presentation.Wpf.Themes.csproj" />
    <ProjectReference Include="..\Presentation.Wpf\MaSch.Presentation.Wpf.csproj" />
    <ProjectReference Include="..\Presentation\MaSch.Presentation.csproj" />
    <ProjectReference Include="..\Generators\MaSch.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Views\SplitView\ExtendedSplitViewContent.cs">
      <DependentUpon>ExtendedSplitViewContent.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\SplitView\SplitView.cs">
      <DependentUpon>SplitView.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>