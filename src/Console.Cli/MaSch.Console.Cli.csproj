<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>

    <!-- General Project info -->
    <TargetFrameworks>net5.0;net48</TargetFrameworks>
    <ConfigureSourceLink>true</ConfigureSourceLink>

    <!-- Output info -->
    <SignAssembly>true</SignAssembly>

    <!-- Package Info -->
    <Description>Contains supporting code for console CLI applications.</Description>
    <Version>0.1.2</Version>
    <PackageTags>masch console terminal cli commandline parser</PackageTags>
  </PropertyGroup>

  <Import Project="../../build/MaSch.props" />

  <!-- Remove this group when this project contains usable code. -->
  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <CodeAnalysisRuleSet>Properties\MaSch.Console.Cli.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\MaSch.Core.csproj" />
    <ProjectReference Include="..\Generators\MaSch.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Internal\Commands\" />
  </ItemGroup>

</Project>
