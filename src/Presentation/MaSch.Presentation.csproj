<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>

    <!-- General Project info -->
    <TargetFrameworks>net5.0;net48</TargetFrameworks>
    <LangVersion>latest</LangVersion>

    <!-- Output info -->
    <OutputPath>..\..\bin\$(Configuration)\</OutputPath>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Properties\MaSch.snk</AssemblyOriginatorKeyFile>
    <Platforms>AnyCPU;x86;x64</Platforms>

    <!-- Package Info -->
    <Description>Contains supporting code for .NET front-end applications.</Description>
    <Version>1.0.0</Version>
    <Authors>Marc Schmidt</Authors>
    <Copyright>Copyright © Marc Schmidt 2021</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/MaSch0212/MaSch</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MaSch0212/MaSch</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>masch presentation ui frontend translation localization validation</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Properties\MaSch.snk" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\MaSch.Core.csproj" />
  </ItemGroup>
</Project>