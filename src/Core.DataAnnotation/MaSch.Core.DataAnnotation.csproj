<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>

    <!-- General Project info -->
    <TargetFrameworks>net5.0;net48</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>MaSch.Core</RootNamespace>
    <CodeAnalysisRuleSet>..\..\build\MaSch.ruleset</CodeAnalysisRuleSet>

    <!-- Output info -->
    <OutputPath>..\..\bin\$(Configuration)\</OutputPath>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Properties\MaSch.snk</AssemblyOriginatorKeyFile>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>

    <!-- Package Info -->
    <Description>Contains common supporting code for .NET applications.</Description>
    <Version>1.0.0</Version>
    <Authors>Marc Schmidt</Authors>
    <Copyright>Copyright © Marc Schmidt 2021</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/MaSch0212/MaSch</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MaSch0212/MaSch</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>masch core common dataannotation annotation observable</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Properties\MaSch.snk" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\MaSch.Core.csproj" />
  </ItemGroup>
</Project>
