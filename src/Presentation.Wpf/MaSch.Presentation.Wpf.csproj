<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>

    <!-- General Project info -->
    <TargetFrameworks>net5.0-windows;net48</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ConfigureSourceLink>true</ConfigureSourceLink>
    <AddReleaseNotes>true</AddReleaseNotes>

    <!-- Output info -->
    <SignAssembly>true</SignAssembly>
    
    <!-- Package Info -->
    <Description>Contains supporting code for .NET WPF applications.</Description>
    <Version>0.1.3</Version>
    <PackageTags>masch presentation ui frontend wpf</PackageTags>
  </PropertyGroup>

  <Import Project="../../build/MaSch.props" />

  <ItemGroup>
    <ProjectReference Include="..\Core.DataAnnotation\MaSch.Core.DataAnnotation.csproj" />
    <ProjectReference Include="..\Core\MaSch.Core.csproj" />
    <ProjectReference Include="..\Generators\MaSch.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\Presentation\MaSch.Presentation.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)'=='net48' ">
    <Reference Include="ReachFramework" />
    <Reference Include="System.Printing" />
  </ItemGroup>
</Project>