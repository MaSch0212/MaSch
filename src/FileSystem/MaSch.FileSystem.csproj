<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- General Project info -->
    <TargetFrameworks>$(TfmsNetCoreApp);$(TfmsNetFramework);$(TfmsNetStandard)</TargetFrameworks>
    <EnableMaSchGenerators>true</EnableMaSchGenerators>
    <IsTrimmable>true</IsTrimmable>

    <!-- Package Info -->
    <Description>Contains an abstraction layer for the file system to easily test .NET applications.</Description>
    <Version>0.1.2</Version>
    <PackageTags>masch file directory filesystem path</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <MaSchReference Include="Core" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="MaSch.Core.Extensions" />
  </ItemGroup>

</Project>
