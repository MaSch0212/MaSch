<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(TfmNetFramework)</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="MaSch.Generators" />
    <Using Include="MaSch.Test.CodeAnalysis.CSharp" />
    <Using Include="MaSch.Test.CodeAnalysis.CSharp.Validators" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
    <PackageReference Include="Verify.MSTest" />
  </ItemGroup>

  <ItemGroup>
    <MaSchReference Include="Core" />
    <MaSchReference Include="Generators" />
    <MaSchReference Include="Test.CodeAnalysis.CSharp.MSTest" />
  </ItemGroup>

  <Target Name="CopySupportFiles" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <SupportFiles Include="$(GitSourceDir)Generators/StaticFiles/**/*.cs" />
    </ItemGroup>
    <MakeDir Directories="$(OutputPath)TestFiles/Generators/StaticFiles" />
    <Copy SourceFiles="@(SupportFiles)" DestinationFolder="$(OutputPath)TestFiles/Generators/StaticFiles" />
  </Target>

</Project>
